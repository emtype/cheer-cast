# CheerCast API Server Production Environment

# Server Configuration
NODE_ENV=production

# Production API URL
API_BASE_URL=https://cheer-cast-production.up.railway.app

# CORS Configuration
CORS_ORIGINS=https://cheer-cast-production.up.railway.app,https://*.railway.app,https://*.up.railway.app

# Railway Production URLs
RAILWAY_STATIC_URL=https://cheer-cast-production.up.railway.app

# Rate Limiting (더 엄격한 설정)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Application Settings
DEFAULT_APP_TITLE=안녕하세요
MESSAGE_MAX_LENGTH=120
TITLE_MAX_LENGTH=50

# SSE Configuration
SSE_PING_INTERVAL=30000
SSE_RECONNECT_DELAY=5000