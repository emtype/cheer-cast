# CheerCast Chrome Extension Environment Variables

# Development Environment
NODE_ENV=development

# Server URLs
API_SERVER_URL=http://localhost:3001
API_SERVER_URL_PRODUCTION=https://cheer-cast-production.up.railway.app

# Current Environment URL (change this for different environments)
CURRENT_SERVER_URL=https://cheer-cast-production.up.railway.app

# Animation Settings
BALLOON_DURATION_MIN=12
BALLOON_DURATION_MAX=18
SPEECH_DURATION_MIN=8
SPEECH_DURATION_MAX=12

# Position Settings (percentages)
BALLOON_START_MIN=85
BALLOON_START_MAX=95
SPEECH_START_MIN=70
SPEECH_START_MAX=80

# Queue Processing
QUEUE_INTERVAL_MIN=500
QUEUE_INTERVAL_MAX=1500

# Connection Settings
SSE_RECONNECT_DELAY=5000